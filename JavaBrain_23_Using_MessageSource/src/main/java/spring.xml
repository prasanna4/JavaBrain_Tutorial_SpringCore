<?xml version="1.0" encoding="UTF-8"?>
<beans 
xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context" 
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
 http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
     

    
   
    
    <bean id="pointA" class="org.javabrains.springcore.JavaBrain_23_Using_MessageSource.Point">
      <property name="x" value="0"></property>
      <property name="y" value="0"></property>     		 
    </bean>
    
    <bean id="pointB" class="org.javabrains.springcore.JavaBrain_23_Using_MessageSource.Point">
      <property name="x" value="-20"></property>
      <property name="y" value="0"></property>     		 
    </bean>
     
     
    <bean id="center" class="org.javabrains.springcore.JavaBrain_23_Using_MessageSource.Point">
      <property name="x" value="-30"></property>
      <property name="y" value="20"></property>     		 
    </bean>

    
    
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
      <property name="basenames">
        <list>
          <value>mymessages</value>
        </list>
      </property>
    </bean>
    <context:annotation-config/>
    <context:component-scan base-package="org.javabrains.springcore.JavaBrain_23_Using_MessageSource"></context:component-scan>
</beans>
